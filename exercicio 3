// Dado três valores, verificar se eles podem constituir os lados de um triângulo (triângulo é uma
// figura geométrica onde cada lado é menor do que a soma dos outros dois lados).
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main (){
	double A, B, C;
	printf ("para formar um triangulo cada lado tem que \nser menor que a soma dos outros dois lados");
	printf ("\nentao vamos la, qual o valor do lado A:");
	scanf ("%d", &A);
	printf ("\nagora digite o valor do lado B:");
	scanf ("%d", &B);
	printf ("\ndigite o valor do lado C:");
	scanf ("%d", &C);
	
	if ((A <= B + C) && (B <= A + C) && (C <= A + B)) {
	  printf ("com esses dados da pra fazer um triangulo");
    }else{
    	printf ("nao tem como formar um triangulo com essas medidas");
  }
}
